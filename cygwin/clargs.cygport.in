NAME="clargs"
VERSION=$(version)
RELEASE=1

CATEGORY="Devel"
SUMMARY="C++ command line arguments parser"
DESCRIPTION="C++ command line arguments parser. Cross-platform."

SRC_URI="https://github.com/igagis/clargs/archive/${VERSION}.tar.gz"

#compile time dependencies
DEPEND="prorab prorab-extra utki"

REQUIRES="utki"

src_compile() {
  cd ${B}
  lndirs
  cygmake
}

src_install() {
  cd ${B}
  cyginstall -C src PREFIX=/usr
}

